# =============================================================================
# CrewHub Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# OpenClaw Gateway (Optional — auto-detected during onboarding)
# -----------------------------------------------------------------------------
# WebSocket URL for the OpenClaw Gateway
# - Local development: ws://localhost:18789
# - Docker (Mac/Windows): ws://host.docker.internal:18789
# - Docker (Linux): ws://172.17.0.1:18789
OPENCLAW_GATEWAY_URL=ws://localhost:18789

# Gateway token (optional — onboarding wizard auto-detects from ~/.openclaw/openclaw.json)
# Only needed if auto-discovery can't find your config
OPENCLAW_GATEWAY_TOKEN=

# -----------------------------------------------------------------------------
# Backend Configuration
# -----------------------------------------------------------------------------
# Port for the backend API server
BACKEND_PORT=8090

# Enable debug mode (more verbose logging)
DEBUG=false

# -----------------------------------------------------------------------------
# Frontend Configuration
# -----------------------------------------------------------------------------
# Backend API URL (change if using a different port or host)
VITE_API_URL=http://localhost:8090
